{{!-- section --}}
<section class="section my-4">
  <div class="container text-center">
    <div class="titl py-5">
      <h1>Node File Uploader</h1>
      <p class="subtitle">Upload Images to the <strong>Server</strong></p>
    </div>
    <div class="row justify-content-center">
      <div class="col-4">
        <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
          <div class="row">
            <div class="col-9">
              <input type="file" class="form-control" name="images" id="formFile" multiple />
            </div>
            <div class="col-1">
              <input type="submit" class="btn btn-warning" value="Upload Images" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
{{!--/section --}}

{{!--display images--}}
<section class="mt-15">
  <div class="row">
      {{#each images}}
      {{#each this}}
      {{#if imageBase64}}
      {{!-- bootstrap cards --}}
      <div class="col-3">
        <div class="card shadow" style="width: 18rem;  margin-left: 1em;  margin-top: 15px; height: auto; ">
          <img src='data:{{contentType}}; base64,{{imageBase64}}' class="card-img-top" class="img-fluid img-responsive" alt="...">
          <div class="card-body">
            <h5 class="card-title font-poppins">UI/UX Design</h5>
            <p class="text-secondary font-size-09">Some quick example text to build on the card title and make up the
              bulk of the card's
              content.</p>
            <a href="#" class="btn btn-info font-size-09 text-light">Read More...</a>
          </div>
        </div>
      </div>
      {{!-- /bootstrap cards --}}
      {{/if}}
      {{/each}}
      {{/each}}
  </div>
</section>
{{!--/display images --}}
